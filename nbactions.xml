<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>rebuild</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>clean</goal>
            <goal>install</goal>
        </goals>
        <properties>
            <skipTests>true</skipTests>
            <skip>true</skip>
        </properties>
    </action>
    <action>
        <actionName>build</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>install</goal>
        </goals>
        <properties>
            <skipTests>true</skipTests>
            <skip>true</skip>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>spring-boot:run</goal>
        </goals>
        <properties>
            <jpda.listen>true</jpda.listen>
            <skipTests>true</skipTests>
            <run.jvmArguments>-noverify -XX:TieredStopAtLevel=1 -Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</run.jvmArguments>
            <Env.SPRING_DEVTOOLS_RESTART_TRIGGER_FILE>.nbRestartTrigger</Env.SPRING_DEVTOOLS_RESTART_TRIGGER_FILE>
            <Env.SPRING_OUTPUT_ANSI_ENABLED>always</Env.SPRING_OUTPUT_ANSI_ENABLED>
            <run.profiles>local-stage</run.profiles>
        </properties>
    </action>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>spring-boot:run</goal>
        </goals>
        <properties>
            <run.jvmArguments>-noverify -XX:TieredStopAtLevel=1</run.jvmArguments>
            <Env.SPRING_DEVTOOLS_RESTART_TRIGGER_FILE>.nbRestartTrigger</Env.SPRING_DEVTOOLS_RESTART_TRIGGER_FILE>
            <Env.SPRING_OUTPUT_ANSI_ENABLED>always</Env.SPRING_OUTPUT_ANSI_ENABLED>
            <run.profiles>local-stage</run.profiles>
        </properties>
    </action>    
    <action>
        <actionName>CUSTOM-Full Build</actionName>
        <displayName>Full Build</displayName>
        <goals>
            <goal>clean</goal>
            <goal>install</goal>
        </goals>
    </action>  
    <action>
        <actionName>CUSTOM-Sortpom</actionName>
        <displayName>Sortpom</displayName>
        <goals>
            <goal>com.github.ekryd.sortpom:sortpom-maven-plugin:2.8.0:sort</goal>
        </goals>
        <properties>
            <sort.nrOfIndentSpace>-1</sort.nrOfIndentSpace>
            <sort.keepBlankLines>true</sort.keepBlankLines>
        </properties>
    </action>
</actions>
